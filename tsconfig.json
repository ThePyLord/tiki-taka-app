{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    },
  },
  "include": [
    "src/**/*",
    "src/types/*"
, "tests/Game.test.ts"  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
